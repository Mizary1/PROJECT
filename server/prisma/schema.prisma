generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id Int @id @default(autoincrement())
  email String 
  password String
  role String @default("USER")

  orders Order[]
}

model Product{
  id Int @id @default(autoincrement())
  title String
  description String
  price Int
  img String

  orders Order[]
}


model Request{
  id Int @id @default(autoincrement())
  name String
  email String
  number String
  message String
}

model Recipe{
  id Int @id @default(autoincrement())
  title String
  description String
  
  timeUntilKneading String
  
  fromKneadingToBaking String
  videoUrl String
  
}


model Order{
  id Int @id @default(autoincrement())
  name String
  product Product @relation(fields: [productId] , references: [id])
  productId Int
  quantity Int
  adress String
  
  user User @relation(fields: [userId] , references: [id])
  userId Int

  status String

}

